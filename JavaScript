const prompt = require("prompt-sync")();

// variavel para armazenar o peso em kg
let peso = parseFloat(prompt("Digite o seu peso em kg (ex: 70.5): "));

// variavel para armazenar a altura em metros
let altura = parseFloat(prompt("Digite a sua altura em metros (ex: 1.75): "));

// variavel para armazenar o IMC calculado
let imc = peso / (altura * altura); // fórmula do IMC

// mostra o IMC com 2 casas decimais
console.log(`\nSeu IMC é: ${imc.toFixed(2)}`);
